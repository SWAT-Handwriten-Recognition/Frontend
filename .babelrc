{
  "env": {
    "testing": {
      "presets": ["es2015", "stage-1", "react", "flow"],
      "plugins": ["transform-runtime"]
    }
  },
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": ["last 2 versions", "not dead", "not < 2%", "not ie 11"],
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ],
  "plugins": [
    ["@babel/plugin-transform-runtime"],
    [
      "babel-plugin-styled-components",
      {
        "pure": true
      }
    ]
  ]
}
